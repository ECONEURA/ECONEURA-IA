#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run linting
echo "📝 Running ESLint..."
pnpm lint

# Run type checking
echo "🔧 Running TypeScript type check..."
pnpm typecheck

# Run tests
echo "🧪 Running tests..."
pnpm test

echo "✅ All pre-push checks passed! Ready to push."