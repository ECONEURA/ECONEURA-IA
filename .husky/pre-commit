#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run verify no secrets
echo "🔐 Running verify no secrets..."
node scripts/ops/verify_no_secrets.mjs

# Run lint-staged (linting, formatting, and other checks)
echo "📝 Running lint-staged..."
npx lint-staged

# Run type checking (only on staged files if possible)
echo "🔧 Running TypeScript type check..."
pnpm typecheck

# Run unit tests (only affected tests if possible)
echo "🧪 Running unit tests..."
pnpm test:unit

echo "✅ Pre-commit checks passed!"
