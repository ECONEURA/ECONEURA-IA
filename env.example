# ECONEURA Environment Configuration
# Copy to .env and fill with real values

# =============================================================================
# CORS & SECURITY
# =============================================================================
ALLOWED_ORIGINS=https://www.econeura.com,https://econeura-web-dev-dpehcua9augngbcb.northeurope-01.azurewebsites.net
CORS_CREDENTIALS=true

# =============================================================================
# NEURA↔Comet API (Port 3101)
# =============================================================================
PPLX_API_KEY=your_perplexity_api_key_here
MEM_PG_URL=postgres://user:password@localhost:5432/econeura_mem
REDIS_URL=redis://localhost:6379

# =============================================================================
# Agentes↔Make API (Port 3102)
# =============================================================================
MAKE_WEBHOOK_URL=https://hook.make.com/your_webhook_id_here
MAKE_HMAC_SECRET=your_hmac_secret_here_change_me
AGENTS_TRIGGER_URL=http://localhost:3102/agents/trigger

# =============================================================================
# VOICE DEMO (Port 3103)
# =============================================================================
FEATURE_VOICE=demo
VOICE_LANG=es-ES

# =============================================================================
# TELEMETRY & FINOPS
# =============================================================================
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-endpoint.com
OTEL_SERVICE_NAME=econeura-cockpit
OTEL_SERVICE_VERSION=1.0.0

# FinOps
BUDGET_DAILY_EUR=10.0
BUDGET_MONTHLY_EUR=300.0
BUDGET_EMERGENCY_EUR=500.0

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================
# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_API_BASE=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Azure App Service
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgres://user:password@localhost:5432/econeura
DATABASE_SSL=true
DATABASE_POOL_SIZE=10

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_NEURA_CHAT=true
FEATURE_AGENTS_MAKE=true
FEATURE_VOICE_DEMO=true
FEATURE_FINOPS_ENFORCEMENT=true
FEATURE_HITL_APPROVAL=true

# =============================================================================
# DEVELOPMENT
# =============================================================================
NODE_ENV=development
PORT=3000
API_PORT=3001
NEURA_PORT=3101
AGENTS_PORT=3102
VOICE_PORT=3103

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=your_jwt_secret_here_change_me
SESSION_SECRET=your_session_secret_here_change_me
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
GDPR_ENABLED=true
SOX_COMPLIANCE=true

# =============================================================================
# PERFORMANCE
# =============================================================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10