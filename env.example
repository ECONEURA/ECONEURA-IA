# =============================================================================
# ECONEURA - Variables de Entorno
# =============================================================================

# Entorno
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# BASE DE DATOS (PostgreSQL)
# =============================================================================
PGHOST=localhost
PGUSER=econeura_user
PGPASSWORD=econeura_password
PGDATABASE=econeura_dev
PGPORT=5432

# =============================================================================
# INTELIGENCIA ARTIFICIAL
# =============================================================================
# Mistral Local
MISTRAL_BASE_URL=http://localhost:8080
MISTRAL_API_KEY=local_key

# Azure OpenAI (Backup)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_KEY=your_azure_openai_key

# Límites de coste
AI_MONTHLY_CAP_EUR=50

# =============================================================================
# MICROSOFT GRAPH
# =============================================================================
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
GRAPH_DEFAULT_TEAM_ID=your_team_id
GRAPH_DEFAULT_CHANNEL_ID=your_channel_id

# =============================================================================
# WEBHOOKS MAKE
# =============================================================================
MAKE_WEBHOOK_HMAC_SECRET=your_hmac_secret
MAKE_ALLOWED_IPS=127.0.0.1,::1

# =============================================================================
# BFF (Backend for Frontend)
# =============================================================================
BFF_TARGET_API=http://localhost:4000

# =============================================================================
# OBSERVABILIDAD
# =============================================================================
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=econeura-web

# =============================================================================
# SEGURIDAD
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# URLs PÚBLICAS
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_APP_URL=http://localhost:3000

