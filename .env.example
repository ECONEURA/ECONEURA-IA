# ECONEURA Environment Configuration Template
# Mediterranean CRM+ERP+AI System
# Copy this file to .env.local and configure your values

# ==================================================
# ENVIRONMENT CONFIGURATION
# ==================================================
NODE_ENV=development
ENVIRONMENT=dev
PORT=3000
API_PORT=8080

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
# Local development
DATABASE_URL=postgresql://econeura_admin:your_password@localhost:5432/econeura_db

# Azure production (use Key Vault references)
# DATABASE_URL=@Microsoft.KeyVault(SecretUri=https://your-keyvault.vault.azure.net/secrets/database-url-dev/)

# ==================================================
# AUTHENTICATION & SECURITY
# ==================================================
# JWT configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# NextAuth configuration
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-characters
NEXTAUTH_URL=http://localhost:3000

# Session configuration
SESSION_SECRET=your-session-secret-at-least-32-characters

# ==================================================
# AI ROUTER CONFIGURATION
# ==================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Azure OpenAI (alternative)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Anthropic Claude (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# AI Router settings
AI_ROUTER_ENABLED=true
AI_FINOPS_ENABLED=true
AI_COST_LIMIT_DAILY=50.00
AI_COST_ALERT_THRESHOLD=40.00

# ==================================================
# CACHE & REDIS CONFIGURATION
# ==================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_TTL=3600

# ==================================================
# EMAIL CONFIGURATION
# ==================================================
# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@econeura.com
FROM_NAME=ECONEURA System

# ==================================================
# WEBHOOK CONFIGURATION
# ==================================================
WEBHOOK_SECRET=your-webhook-secret-for-signature-validation
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# ==================================================
# FILE STORAGE CONFIGURATION
# ==================================================
# Local storage
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Azure Blob Storage (production)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=uploads

# ==================================================
# MONITORING & LOGGING
# ==================================================
# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# Logging configuration  
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ==================================================
# CORS & SECURITY CONFIGURATION
# ==================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================================
# OUTLOOK INTEGRATION
# ==================================================
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_TENANT_ID=your-azure-tenant-id
OUTLOOK_REDIRECT_URI=http://localhost:3000/api/auth/outlook/callback

# ==================================================
# FEATURE FLAGS
# ==================================================
FEATURE_CRM_ENABLED=true
FEATURE_ERP_ENABLED=true
FEATURE_AI_ROUTER_ENABLED=true
FEATURE_WEBHOOKS_ENABLED=true
FEATURE_OUTLOOK_INTEGRATION=true
FEATURE_ADVANCED_ANALYTICS=false

# ==================================================
# DEVELOPMENT CONFIGURATION
# ==================================================
# Development tools
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT=false
ANALYZE_BUNDLE=false

# Hot reload
WATCHPACK_POLLING=true
FAST_REFRESH=true

# ==================================================
# PRODUCTION OVERRIDES
# ==================================================
# Uncomment and configure for production deployment

# NODE_ENV=production
# ENVIRONMENT=prod
# DATABASE_URL=@Microsoft.KeyVault(SecretUri=https://econeura-prod-kv.vault.azure.net/secrets/database-url-prod/)
