# =================================================
# ECONEURA Environment Configuration
# =================================================

# Node Environment
NODE_ENV=development
LOG_LEVEL=info

# Server Configuration  
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
PGHOST=localhost
PGUSER=econeura
PGPASSWORD=your_secure_password
PGDATABASE=econeura
PGPORT=5432

# AI Configuration
MISTRAL_BASE_URL=http://mistral:8080
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_KEY=your_azure_openai_key

# AI Cost Control
AI_DAILY_CAP_EUR=10
AI_MONTHLY_CAP_EUR=50

# Microsoft Graph Configuration
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
GRAPH_DEFAULT_TEAM_ID=your_team_id
GRAPH_DEFAULT_CHANNEL_ID=your_channel_id

# Webhook Configuration
MAKE_WEBHOOK_HMAC_SECRET=your_hmac_secret
MAKE_ALLOWED_IPS=192.168.1.0/24

# BFF Configuration
BFF_TARGET_API=http://localhost:3001

# Legacy/Compatibility
DATABASE_URL=postgresql://econeura:your_secure_password@localhost:5432/econeura
PRISMA_LOG_LEVEL=info
REDIS_URL=redis://localhost:6379
JWT_SECRET=your_jwt_secret_key_here
EMAIL_SMTP_URL=smtp://user:pass@localhost:587

# Web Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_TELEMETRY_DISABLED=1

# Workers/Queue Configuration
QUEUE_NAME=econeura-tasks
METRICS_PORT=9090

# Performance Testing (K6)
K6_BASE_URL=http://localhost:3001
K6_MAX_VUS=20
K6_DURATION=5m
K6_RAMP_DURATION=2m
K6_CHAOS_DURATION=3m