{
  "name": "ECONEURA-IA",
  "version": "1.0.0",
  "description": "ECONEURA - Production-ready ERP+CRM cockpit with AI Router",
  "private": true,
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "check": "pnpm -r check",
    "verify": "pnpm lint && pnpm test && pnpm build",
    "coverage": "vitest run --coverage --reporter=default --reporter=lcov",
    "test:coverage": "pnpm -w coverage",
    "k6:load": "k6 run tests/k6/load-test.js",
    "k6:chaos": "k6 run tests/k6/chaos-test.js",
    "k6:smoke": "k6 run tests/k6/smoke.js",
    "e2e:smoke": "k6 run tests/k6/smoke.js",
    "e2e:ui": "playwright test",
    "api:openapi": "pnpm --filter @econeura/api openapi:generate",
    "openapi:validate": "npx @redocly/openapi-cli lint apps/api/openapi.json",
    "openapi:diff": "npx @redocly/openapi-cli diff",
    "db:generate": "pnpm --filter @econeura/db db:generate",
    "db:migrate": "pnpm --filter @econeura/db db:migrate",
    "db:seed": "pnpm --filter @econeura/db db:seed",
    "db:reset": "pnpm --filter @econeura/db db:reset",
    "db:studio": "pnpm --filter @econeura/db db:studio",
    "security:audit": "pnpm audit --audit-level=high",
    "security:scan": "npx snyk test --severity-threshold=high",
    "secrets:scan": "npx detect-secrets scan --baseline .secrets.baseline",
    "secrets:audit": "npx detect-secrets audit .secrets.baseline",
    "security:anti-secrets": "node scripts/security/anti-secrets-scan.mjs",
    "security:sbom": "node scripts/security/sbom-generator.mjs",
    "security:ci": "node scripts/security/security-ci.mjs",
    "security:all": "pnpm security:anti-secrets && pnpm security:sbom && pnpm security:audit && pnpm security:scan",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/.next && rm -rf packages/*/dist",
    "setup": "pnpm install && pnpm db:generate && pnpm db:migrate && pnpm db:seed",
    "postinstall": "echo 'Setup complete'",
    "chaos:on": "cross-env CHAOS_ENABLED=true pnpm --filter @econeura/api dev",
    "chaos:off": "cross-env CHAOS_ENABLED=false pnpm --filter @econeura/api dev",
    "lint:strict": "eslint . --config .eslintrc.strict.cjs",
    "optimize": "node --max-old-space-size=4096 scripts/optimize.js",
    "build:optimized": "npm run optimize && npm run build",
    "start:optimized": "NODE_ENV=production node --max-old-space-size=4096 dist/index.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@eslint/js": "^9.0.0",
    "@redocly/cli": "^1.34.5",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "csv-parse": "^6.1.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "husky": "^8.0.3",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "snyk": "^1.1272.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@econeura/agents": "file:packages/agents",
    "eventsource-parser": "^3.0.6",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.1.5",
    "pm2": "^6.0.8",
    "pnpm": "^8.15.0",
    "prom-client": "^15.1.3",
    "zod": "^3.22.4"
  }
}
