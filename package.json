{
  "name": "econeura",
  "version": "1.0.0",
  "description": "ECONEURA - Production-ready ERP+CRM cockpit with AI Router",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
  "build": "./scripts/clean.sh && ./scripts/validate-types.sh && pnpm -r --filter './packages/*' --if-present build && pnpm -r --filter './apps/*' --if-present build",
    "build:all": "pnpm -r --if-present build",
    "test:all": "pnpm -r --if-present test --silent",

    "build:web": "pnpm --filter @econeura/web build",
  "build:api": "pnpm exec tsc -p apps/api/tsconfig.json",
  "typecheck:api": "pnpm exec tsc -p apps/api/tsconfig.json --noEmit",
    "build:packages": "pnpm -r --filter ./packages... build",
    "dev": "concurrently -k -n web,api,db \"pnpm --filter @econeura/web dev\" \"pnpm --filter @econeura/api dev\" \"pnpm db:studio\"",
    "dev:web": "pnpm --filter @econeura/web dev",
    "dev:api": "pnpm --filter @econeura/api dev",
    "dev:db": "pnpm db:studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
  "test": "vitest --run",
  "progress": "tsx ./scripts/progress-v3.ts",
  "seed:ensure60": "tsx scripts/seed/ensure-sixty.ts",
  "route:lint": "node scripts/route-linter.mjs",
  "test:contract": "vitest run --config tests/contract/vitest.config.ts --reporter=default",
  "openapi:record": "node scripts/openapi-checksum.mjs record",
  "openapi:checksum": "node scripts/openapi-checksum.mjs check",
  "ci:strict": "pnpm -w --filter '@econeura/api' --filter '@econeura/shared' run build && pnpm -w run test && pnpm openapi:checksum",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:integration": "vitest --run --config vitest.integration.config.ts",
    "test:performance": "vitest --run --config vitest.performance.config.ts",
  "typecheck": "pnpm -r --if-present exec tsc --noEmit",
    "typecheck:watch": "pnpm -r exec tsc --noEmit --watch",
    "format": "prettier --write .",
    "api:openapi": "pnpm --filter @econeura/api openapi:generate",
    "openapi:validate": "npx @redocly/openapi-cli lint apps/api/openapi.json",
    "openapi:diff": "npx @redocly/openapi-cli diff",
    "db:generate": "pnpm --filter @econeura/db db:generate",
    "db:migrate": "pnpm --filter @econeura/db db:migrate",
    "db:seed": "pnpm --filter @econeura/db db:seed",
    "db:reset": "pnpm --filter @econeura/db db:reset",
    "db:studio": "pnpm --filter @econeura/db db:studio",
    "security:audit": "pnpm audit --audit-level=high",
    "security:scan": "npx snyk test --severity-threshold=high",
    "secrets:scan": "npx detect-secrets scan --baseline .secrets.baseline",
    "secrets:audit": "npx detect-secrets audit .secrets.baseline",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/.next && rm -rf packages/*/dist",
    "setup": "pnpm install && pnpm db:generate && pnpm db:migrate && pnpm db:seed",
    "postinstall": "echo 'Setup complete'",
  "ci:build": "pnpm --filter \"@econeura/shared...\" --filter \"@econeura/api\" -r --if-present build",
  "ci:test": "pnpm --filter \"@econeura/shared...\" --filter \"@econeura/api\" -r --if-present test --silent",
  "ci:unit": "pnpm --filter \"@econeura/shared...\" --filter \"@econeura/api\" -r --if-present test:unit --silent",
  "test:ui": "playwright test -c tests/ui/playwright.config.ts",
  "test:ui:update": "playwright test -c tests/ui/playwright.config.ts --update-snapshots",
  "perf:k6": "k6 run tests/perf/e2e.js",
  "route:linter": "node scripts/route-linter.mjs",
  "health:integrations": "node scripts/ci/check-integrations-health.mjs"
  },

  "devDependencies": {
  "supertest": "^7.1.4",
  "@types/supertest": "^6.0.3",
  "jose": "^5.3.0",
  "undici": "^6.21.3",
  "@playwright/test": "^1.46.0",
    "@apidevtools/swagger-parser": "^12.0.0",
    "@redocly/cli": "^1.34.5",
  "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "fast-glob": "^3.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "snyk": "^1.1272.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
  "vitest": "^1.0.0",
  "react-is": "^18.2.0",
  "yaml": "^2.8.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "eventsource-parser": "^3.0.6",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.1.5",
    "pm2": "^6.0.8",
    "pnpm": "^8.15.0",
    "prom-client": "^15.1.3",
    "zod": "^3.22.4"
  }
}
