{
  "name": "econeura",
  "version": "1.0.0",
  "description": "ECONEURA - Production-ready ERP+CRM cockpit with AI Router",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' --if-present build && pnpm -r --filter './apps/*' --if-present build",
    "build:all": "pnpm -r --if-present build",
    "build:shared": "pnpm --filter @econeura/shared build",
    "build:api": "pnpm exec tsc -p apps/api/tsconfig.json",
    "typecheck": "pnpm exec tsc --noEmit",
    "typecheck:api": "pnpm exec tsc -p apps/api/tsconfig.json --noEmit",
    "dev:api": "pnpm --filter @econeura/api dev",
    "start:api": "pnpm --filter @econeura/api start",
    "lint": "pnpm -r -w run lint --if-present",
    "lint:fix": "pnpm -r -w run lint:fix --if-present",
    "clean": "pwsh -File ./scripts/clean.ps1",
    "clean:all": "pnpm -r exec rm -rf dist node_modules/.cache",
    "install:all": "pnpm install --frozen-lockfile",
    "bootstrap": "pwsh -File ./scripts/bootstrap-p0-ultra.ps1"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@playwright/test": "^1.46.0",
    "@redocly/cli": "^1.34.5",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.4.0",
    "husky": "^8.0.3",
    "jose": "^5.3.0",
    "lint-staged": "^15.2.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "react-is": "^18.2.0",
    "snyk": "^1.1272.0",
    "supertest": "^7.1.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "undici": "^6.21.3",
    "vitest": "^1.0.0",
    "yaml": "^2.8.1",
    "@openapitools/openapi-generator-cli": "^2.23.1",
    "openapi-typescript-codegen": "^0.29.0",
    "swagger-ui-express": "^5.0.1",
    "@types/swagger-ui-express": "^4.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "eventsource-parser": "^3.0.6",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^8.1.0",
    "pm2": "^6.0.8",
    "pnpm": "^8.15.0",
    "prom-client": "^15.1.3",
    "zod": "^3.22.4"
  }
}
