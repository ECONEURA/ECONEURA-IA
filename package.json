{
  "name": "econeura-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:e2e": "playwright test",
    "db:generate": "pnpm --filter api db:generate",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:reset": "pnpm --filter api db:reset",
    "db:seed": "pnpm --filter api db:seed",
    "api:openapi": "pnpm --filter api openapi"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "prom-client": "^15.1.3",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^24.3.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "vitest": "^3.2.4"
  }
}
