{
  "name": "econeura",
  "version": "1.0.0",
  "description": "ECONEURA - Production-ready ERP+CRM cockpit with AI Router",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "npm run build:shared && npm run build:apps",
    "build:shared": "npm --workspace=packages/shared run build",
    "build:apps": "npm --workspace=apps/api run build && npm --workspace=apps/web run build",
    "dev": "npm --workspaces run dev",
    "test": "npm --workspaces run test",
    "test:unit": "npm --workspaces run test:unit",
    "test:integration": "npm --workspaces run test:integration",
    "test:e2e": "npm --workspaces run test:e2e",
    "lint": "npm --workspaces run lint",
    "typecheck": "npm --workspaces run typecheck",
    "format": "prettier --write .",
    "api:openapi": "npm --workspace=apps/api run openapi:generate",
    "openapi:lint": "redocly lint apps/api/openapi.yaml",
    "openapi:diff": "redocly diff origin/main apps/api/openapi.yaml",
    "db:generate": "npm --workspace=apps/api run db:generate",
    "db:migrate": "npm --workspace=apps/api run db:migrate",
    "db:seed": "npm --workspace=apps/api run db:seed",
    "db:reset": "npm --workspace=apps/api run db:reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "security:scan": "npm audit && snyk test",
    "postinstall": "echo 'Setup complete'"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.5",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "snyk": "^1.1272.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "pm2": "^6.0.8",
    "pnpm": "^8.15.0"
  }
}
