{
  "name": "econeura",
  "version": "1.0.0",
  "description": "ECONEURA - Production-ready ERP+CRM cockpit with AI Router",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "./scripts/clean.sh && ./scripts/validate-types.sh && pnpm -r --filter ./packages... build && pnpm -r --filter ./apps... build",
    "build:web": "pnpm --filter @econeura/web build",
    "build:api": "pnpm --filter @econeura/api build",
    "build:packages": "pnpm -r --filter ./packages... build",
    "dev": "concurrently -k -n web,api,db \"pnpm --filter @econeura/web dev\" \"pnpm --filter @econeura/api dev\" \"pnpm db:studio\"",
    "dev:web": "pnpm --filter @econeura/web dev",
    "dev:api": "pnpm --filter @econeura/api dev",
    "dev:db": "pnpm db:studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:integration": "vitest --run --config vitest.integration.config.ts",
    "test:performance": "vitest --run --config vitest.performance.config.ts",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "typecheck:watch": "pnpm -r exec tsc --noEmit --watch",
    "format": "prettier --write .",
    "api:openapi": "pnpm --filter @econeura/api openapi:generate",
    "openapi:validate": "npx @redocly/openapi-cli lint apps/api/openapi.json",
    "openapi:diff": "npx @redocly/openapi-cli diff",
    "db:generate": "pnpm --filter @econeura/db db:generate",
    "db:migrate": "pnpm --filter @econeura/db db:migrate",
    "db:seed": "pnpm --filter @econeura/db db:seed",
    "db:reset": "pnpm --filter @econeura/db db:reset",
    "db:studio": "pnpm --filter @econeura/db db:studio",
    "security:audit": "pnpm audit --audit-level=high",
    "security:scan": "npx snyk test --severity-threshold=high",
    "secrets:scan": "npx detect-secrets scan --baseline .secrets.baseline",
    "secrets:audit": "npx detect-secrets audit .secrets.baseline",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/.next && rm -rf packages/*/dist",
    "setup": "pnpm install && pnpm db:generate && pnpm db:migrate && pnpm db:seed",
    "postinstall": "echo 'Setup complete'"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.5",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.6.2",
    "snyk": "^1.1272.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "eventsource-parser": "^3.0.6",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.1.5",
    "pm2": "^6.0.8",
    "pnpm": "^8.15.0",
    "prom-client": "^15.1.3",
    "zod": "^3.22.4"
  }
}
