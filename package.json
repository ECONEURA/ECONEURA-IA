{
  "name": "econeura",
  "version": "1.0.0",
  "description": "ECONEURA - Production-ready ERP+CRM cockpit with AI Router",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -w run build:shared && pnpm -r --filter=!shared run build",
    "build:shared": "pnpm --filter=shared run build",
    "dev": "pnpm -r run dev",
    "test": "pnpm -r run test",
    "test:unit": "pnpm -r run test:unit",
    "test:integration": "pnpm -r run test:integration",
    "test:e2e": "pnpm -r run test:e2e",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "format": "prettier --write .",
    "openapi:lint": "redocly lint apps/api/openapi.yaml",
    "openapi:diff": "redocly diff origin/main apps/api/openapi.yaml",
    "db:migrate": "pnpm --filter=api run db:migrate",
    "db:seed": "pnpm --filter=api run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "security:scan": "npm audit && snyk test",
    "postinstall": "echo 'Setup complete'"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.5",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "snyk": "^1.1272.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "pm2": "^6.0.8",
    "pnpm": "^8.15.0"
  }
}
