// Added HITL and audit models for HIL/FSM features (minimal)
model hITLTask {
  id        Int      @id @default(autoincrement())
  name      String
  payload   String
  status    String   @default("open")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditEvent {
  id        Int      @id @default(autoincrement())
  type      String
  payload   String
  createdAt DateTime @default(now())
}
