# API Configuration
PORT=5001
NODE_ENV=development

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/econeura
DB_POOL_SIZE=20

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# API Keys (JSON format for development)
API_KEYS_JSON={"org-demo":"key-demo-123456789abcdef","org-test":"key-test-987654321fedcba"}

# Admin Organizations (comma-separated)
ADMIN_ORG_IDS=org-admin

# AI Router Configuration
ROUTER_DEFAULT_PROVIDER=mistral-edge
MISTRAL_BASE_URL=https://mistral-edge.internal:11434
OPENAI_API_KEY=sk-...
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_KEY=your-azure-key

# FinOps Settings
MONTHLY_COST_CAP_EUR=50

# Microsoft Graph Integration
GRAPH_TENANT_ID=your-tenant-id
GRAPH_CLIENT_ID=your-client-id
GRAPH_CLIENT_SECRET=your-client-secret
GRAPH_SCOPES=Mail.Send,Calendars.ReadWrite,Tasks.ReadWrite,Files.Read.All

# WhatsApp Cloud API
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Webhook Secrets
MAKE_WEBHOOK_SECRET=your-make-webhook-secret
ZAPIER_WEBHOOK_SECRET=your-zapier-webhook-secret
OUTLOOK_WEBHOOK_SECRET=your-outlook-webhook-secret
TEAMS_WEBHOOK_SECRET=your-teams-webhook-secret
WEBHOOK_MAX_SKEW_SEC=300

# Logging
LOG_LEVEL=info

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=econeura-api
OTEL_SERVICE_VERSION=1.0.0