{
  "name": "@econeura/api",
  "version": "1.0.0",
  "description": "ECONEURA API Server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "tsx src/test-all-endpoints.ts",
    "test:endpoints": "npm run test",
    "test:health": "curl -s http://localhost:3001/health | jq .",
    "test:metrics": "curl -s http://localhost:3001/metrics | head -10",
    "lint": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint",
    "smoke": "npm run test:health && npm run test:metrics",
    "docker:build": "docker build -t econeura-api .",
    "docker:run": "docker run -p 3001:3001 econeura-api",
    "prod:build": "npm run clean && npm run build",
    "prod:start": "NODE_ENV=production npm run start"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.15.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "concurrently": "^9.2.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
