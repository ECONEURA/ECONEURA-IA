{
  "name": "@econeura/api",
  "version": "1.0.0",
  "description": "ECONEURA API Server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx apps/api/src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:unit": "vitest --run --reporter verbose",
    "test:e2e": "vitest --run --config vitest.e2e.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "start": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@azure/openai": "^2.0.0",
    "@azure/storage-blob": "^12.14.0",
    "@econeura/db": "workspace:*",
    "@econeura/shared": "workspace:*",
    "applicationinsights": "^3.9.0",
    "@opentelemetry/api": "^1.8.0",
    "@prisma/client": "^5.0.0",
    "archiver": "^7.0.1",
    "ioredis": "^5.7.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "undici": "^6.21.3",
    "ws": "^8.18.3",
    "xml2js": "^0.5.0",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "globals": "^16.4.0",
    "supertest": "^7.1.4",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.19.0",
    "tsx": "^4.7.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
