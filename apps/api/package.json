{
  "name": "@econeura/api",
  "version": "1.0.0",
  "description": "ECONEURA API Server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:minimal": "tsx watch src/index-minimal.ts",
    "build": "tsc",
    "build:minimal": "npx esbuild src/index-minimal.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js --external:express --external:cors",
    "start": "node dist/index.js",
    "start:minimal": "node -r ./dist/index.js",
    "clean": "rm -rf dist",
    "deploy:build": "npm run clean && npm run build:minimal",
    "health:check": "curl -f http://localhost:${PORT:-4000}/health || exit 1"
  },
  "dependencies": {
    "@econeura/agents": "file:../../packages/agents",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ws": "^8.18.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "concurrently": "^9.2.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
