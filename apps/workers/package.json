{
  "name": "@econeura/workers",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__/integration.test.ts",
    "load-test": "k6 run tests/load-test.js",
    "stress-test": "k6 run tests/stress-test.js",
    "optimize": "node scripts/optimize.js",
    "monitor": "node scripts/monitor.js",
    "health": "curl -f http://localhost:3001/health || echo 'Workers not running'"
  },
  "dependencies": {
    "@azure/msal-node": "^2.9.2",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "axios": "^1.7.2",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "winston": "^3.13.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.16",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "globals": "^16.4.0",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4",
    "vitest": "^1.0.0"
  }
}