{
  "compilerOptions": {
  "target": "ES2020",
  "module": "ES2022",
  "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
  "baseUrl": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM"],
    "paths": {
      "@econeura/shared/*": ["packages/shared/src/*"],
      "@econeura/shared": ["packages/shared/src/index.ts"],
      "@econeura/db/*": ["packages/db/src/*"],
      "@econeura/db": ["packages/db/src/index.ts"]
    }
  }
}
